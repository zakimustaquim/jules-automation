# Jules Loop Configuration
# Copy this file to .env and fill in the required values

# ============================================================================
# REQUIRED
# ============================================================================

# Jules API key for authentication
JULES_API_KEY=your-jules-api-key-here

# GitHub token with repo write access (for PR merging)
GITHUB_TOKEN=your-github-token-here

# GitHub repository in owner/repo format
GITHUB_REPO=owner/repo-name

# ============================================================================
# OPTIONAL
# ============================================================================

# Target branch for PRs (default: main)
TARGET_BRANCH=main

# Prompt for Jules sessions (default: "Do something interesting in this codebase")
PROMPT=Do something interesting in this codebase

# JSON array of prompt objects with probability-based selection (overrides PROMPT if set)
# Each prompt has "text" and "probability" fields. Probabilities must sum to 1.0.
# Example: Weighted selection favoring features over bugs over docs
# PROMPTS='[{"text":"Add a new feature","probability":0.5},{"text":"Fix a bug","probability":0.3},{"text":"Improve documentation","probability":0.2}]'

# Maximum execution time per session in seconds (default: 1800)
EXECUTION_TIMEOUT_SECS=1800

# Maximum retry attempts for transient errors (default: 3)
RETRY_MAX=3

# Base retry delay in seconds (default: 5)
RETRY_BASE_SECS=5

# Polling interval in seconds (default: 15)
POLL_INTERVAL_SECS=15

# Optional daily session limit (no limit if not set)
# QUOTA_DAILY_LIMIT=10

# Enable dry-run mode to skip actual API calls (default: false)
DRY_RUN=false
